<?xml version="1.0" encoding="utf-8"?>
<ui:BackpackViewBase xmlns:fx="http://ns.adobe.com/mxml/2009" 
					 xmlns:s="library://ns.adobe.com/flex/spark" 
					 xmlns:ui="uk.co.dubit.platform.components.backpack.ui.*" 
					 width="600" height="400"
					 horizontalCenter="0" verticalCenter="0">
	
	<s:TitleWindow width="100%" height="100%" title="Backpack" close="{ backpack.close() }">
		<s:Form width="100%" height="100%">
			<s:FormHeading label="Things you've picked up..." />
			
			<s:List width="100%" height="100%"
					dataProvider="{ backpack.contents }"
					itemRenderer="com.dubitplatform.views.backpack.PossessionItemRenderer">
				<s:layout>
					<s:TileLayout rowHeight="125" columnWidth="125" />					
				</s:layout>
			</s:List>
		</s:Form>
	</s:TitleWindow>
</ui:BackpackViewBase>
