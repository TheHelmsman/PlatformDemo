<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				width="100%" height="100%" mouseChildren="false" rollOver="showToolTip()">
	
	<fx:Script>
		<![CDATA[
			import com.dubitplatform.shared.DemoToolTip;
			
			import uk.co.dubit.platform.components.backpack.Possession;
			
			
			[Bindable(event="dataChange")]
			public function get possession() : Possession
			{
				return data as Possession;
			}
			
			private function showToolTip() : void
			{
				DemoToolTip.show(this, possession.description);
			}
		]]>
	</fx:Script>
	
	<s:Label text="{ possession.name } (x{possession.quantity})" horizontalCenter="0" verticalCenter="0" />
	
</s:ItemRenderer>
