<?xml version="1.0" encoding="utf-8"?>
<ui:MapViewBase xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark" 
				xmlns:ui="uk.co.dubit.platform.components.map.ui.*" 
				width="600" height="400" 
				horizontalCenter="0" verticalCenter="0">
	<fx:Script>
		<![CDATA[
			import spark.events.IndexChangeEvent;
			
			import uk.co.dubit.platform.components.map.ILocation;
			
			protected function onLocationSelected() : void
			{
				var location:ILocation = locationList.selectedItem;
				
				if(location)
				{
					map.dispatchGAMLEvent("onChangeRoom", { "roomID": location.roomID });
					
					locationList.selectedIndex = -1;
					locationList.validateNow();
				}
			}
		]]>
	</fx:Script>
	
	<s:TitleWindow width="100%" height="100%" title="Map" close="{ map.close() }" >
		<s:Form width="100%" height="100%">
			<s:FormHeading label="Select a room to go there" />
			
			<s:FormItem>
				<s:List id="locationList" width="100%" height="100%" 
						dataProvider="{ map.locations }" labelField="name" change="onLocationSelected()" />
			</s:FormItem>
		</s:Form>
	</s:TitleWindow>
	
</ui:MapViewBase>