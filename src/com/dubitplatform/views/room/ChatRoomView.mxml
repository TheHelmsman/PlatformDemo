<?xml version="1.0" encoding="utf-8"?>
<ui:ChatRoomViewBase xmlns:fx="http://ns.adobe.com/mxml/2009" 
					 xmlns:s="library://ns.adobe.com/flex/spark" 
					 xmlns:ui="uk.co.dubit.platform.components.rooms.ui.*"
					 width="100%" height="100%">
	
	<!-- This is the component which the scene Sprite is added into.  The scene will be added into the component using
	     its addChildAt function.  For the Spark component set SpriteVisualElement is the only class which can safely
	     have a sprite added to it -->
	<s:SpriteVisualElement id="sceneContainer" width="100%" height="100%" />
	
	<fx:Script>
		<![CDATA[
			override protected function getSceneContainer() : Sprite
			{
				return sceneContainer;
			}
		]]>
	</fx:Script>
	
</ui:ChatRoomViewBase>