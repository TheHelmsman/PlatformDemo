<?xml version="1.0" encoding="utf-8"?>
<s:ItemRenderer xmlns:fx="http://ns.adobe.com/mxml/2009" 
				xmlns:s="library://ns.adobe.com/flex/spark"
				width="100%" rollOver="showToolTip()">
	
	<fx:Script>
		<![CDATA[
			import com.dubitplatform.shared.DemoToolTip;
			
			import uk.co.dubit.platform.components.scriptedDialogue.ScriptEntry;
			
			
			[Bindable(event="dataChange")]
			public function get scriptEntry() : ScriptEntry
			{
				return data as ScriptEntry;
			}
			
			private function showToolTip() : void
			{
				DemoToolTip.show(this, "Said by " + scriptEntry.owner.avatarName);
			}
		]]>
	</fx:Script>
	
	<s:Label paddingTop="4" paddingBottom="4" paddingLeft="4" paddingRight="4" text="{ scriptEntry.message.text }" />
</s:ItemRenderer>
