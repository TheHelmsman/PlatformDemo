<?xml version="1.0" encoding="utf-8"?>
<ui:ExperienceBarsViewBase xmlns:fx="http://ns.adobe.com/mxml/2009" 
						   xmlns:s="library://ns.adobe.com/flex/spark" 
						   xmlns:ui="uk.co.dubit.platform.components.experience.ui.*"
						   width="600" height="400"
						   horizontalCenter="0" verticalCenter="0">
	
	<fx:Script>
		<![CDATA[
			import uk.co.dubit.platform.components.experienceBars.ExperienceBar;
			import uk.co.dubit.platform.components.experienceBars.ExperienceBars;
			
			[Bindable]
			private var xpBar:ExperienceBar;
			
			override public function set experience(value:ExperienceBars) : void
			{
				super.experience = value;
				
				if(experience) xpBar = experience.getExperienceBarByID("xpBar");
			}
		]]>
	</fx:Script>
	
	<s:TitleWindow width="100%" height="100%" title="Experience Bars" close="{ experience.close() }">
		<s:Form width="100%" height="100%">
			
			<s:List width="100%" height="100%"
					dataProvider="{ xpBar.levels }"
					itemRenderer="com.dubitplatform.views.experience.ExperienceLevelItemRenderer">
				<s:layout>
					<s:VerticalLayout rowHeight="35" />					
				</s:layout>
			</s:List>
		</s:Form>
	</s:TitleWindow>
</ui:ExperienceBarsViewBase>
