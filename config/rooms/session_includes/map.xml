<?xml version="1.0" encoding="UTF-8"?>
<Include xmlns:xi="http://www.w3.org/2001/XInclude">
	
	<Map skin="com.dubitplatform.views.map.MapView" skinContainer="generic">
		<Location name="Example Room 1" roomID="example_room" />
	
		<Triggers>
			<onChangeRoom>
				<ChangeRoom roomID="{Event.roomID}">
					<onFault>
						<Alert message="Error changing room.  Returning to previous room" />
						
						<ChangeRoom roomID="{Rooms.lastRoomID}" />
					</onFault>
				</ChangeRoom>
			</onChangeRoom>
		</Triggers>
	</Map>
</Include>